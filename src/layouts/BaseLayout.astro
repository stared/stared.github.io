---
import { AUTHOR, SITE_DESCRIPTION } from '@/lib/constants';
import PlausibleAnalytics from '@/components/PlausibleAnalytics.astro';

interface Props {
  title: string;
  description?: string;
  image?: string;
}

const { title, description = SITE_DESCRIPTION, image } = Astro.props;
const fullTitle = `${title} - ${AUTHOR}`;
const canonicalURL = new URL(Astro.url.pathname, Astro.site);
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="author" content={AUTHOR} />

    <link rel="icon" type="image/png" href="/favicon.png" />
    <link rel="canonical" href={canonicalURL} />
    <link
      rel="alternate"
      type="application/rss+xml"
      title={`RSS Feed for ${AUTHOR}'s Blog`}
      href="/feed.xml"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/katex@0.16.9/dist/katex.min.css"
    />

    <meta property="og:title" content={fullTitle} />
    <meta property="og:description" content={description} />
    {image && <meta property="og:image" content={image} />}
    <meta property="og:url" content={canonicalURL} />

    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={fullTitle} />
    <meta name="twitter:description" content={description} />
    {image && <meta name="twitter:image" content={image} />}

    <PlausibleAnalytics />
    <title>{fullTitle}</title>
  </head>
  <body>
    <div class="layout">
      <header class="header">
        <strong><a href="/">Piotr Migda≈Ç</a></strong>
        <nav class="nav">
          <a class="nav__link" href="/blog">Blog</a>
          <a class="nav__link" href="/projects">Projects</a>
          <a class="nav__link" href="/publications">Publications</a>
          <a class="nav__link" href="/resume">Resume</a>
        </nav>
      </header>
      <main>
        <slot />
      </main>
    </div>
  </body>
</html>

<style is:global>
  body {
    font-family: -apple-system, system-ui, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
    margin: 0;
    padding: 0;
    line-height: 1.5;
  }

  .layout {
    max-width: 760px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 20px;
    height: 80px;
  }

  .nav__link {
    margin-left: 20px;
  }

  a {
    text-decoration: none;
    color: #2a7ae2;
  }

  a:visited {
    color: #1756a9;
  }

  a:hover {
    text-decoration: underline;
    color: black;
  }

  blockquote {
    font-style: italic;
  }

  img {
    max-width: 100%;
    height: auto;
    margin: auto;
    display: block;
  }

  img.width-max-half {
    max-width: 380px;
  }

  img.width-max-two-thirds {
    max-width: 506px;
  }

  figure.width-max-half img {
    max-width: 380px;
  }

  p:has(> mjx-container:only-child) {
    text-align: center;
  }

  mjx-container {
    margin: 1em auto;
  }

  p:not(:has(> mjx-container:only-child)) mjx-container {
    display: inline-block;
    margin: 0;
  }
</style>
